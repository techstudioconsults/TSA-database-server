<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Reminder</title>
    <style>
      .container { background-color: #fafafa; border-radius: 10px; width: 400px;
      margin: auto; display: grid; grid-template-columns: 1fr; gap: 20px;
      margin-bottom: 40px; } .header { background-color: #1f2666; padding: 20px;
      text-align: center; border-radius: 10px 10px 0 0; /* Top-left, top-right,
      bottom-right, bottom-left */ } .content { display: grid;
      grid-template-columns: 1fr; gap: 10px; text-align: center; padding: 20px;
      border-radius: 10px; } .content img { max-width: 100%; }
    </style>
  </head>
  <body
    style=" width: 100%;
      height: 100vh;
      background-color: aliceblue;
      display: grid;
      place-items: center;"
  >
    <div class="container">
      <div class="header">
        <img
          src="https://res.cloudinary.com/dgde8cwjk/image/upload/v1709026047/database/logo_p7khq6.png"
          alt=""
        />
      </div>
      <div class="content">
        <div>
          <img
            src="https://res.cloudinary.com/dgde8cwjk/image/upload/v1709025925/database/Bell_bscpeb.png"
            alt=""
          />
        </div>
        <div>
          <h2
            style="
              font-weight: bold;
              text-align: center;
            "
          >
            Hello
            {{name}}
          </h2>
          <p>{{comments}}</p>
        </div>
      </div>
    </div>
  </body>
</html>